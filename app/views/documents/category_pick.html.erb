<div class="container">
    <div class="row">
        <div class="col s6 offset-s3">
            <h5 style="text-align: center; margin-top: 30px; margin-bottom: 0px; font-size: 2em">Selecione a categoria</h5>
            <% @categories.each do |c| %>
                <%= link_to(category_pick_path(c.id)) do %>
                    <div class="card-panel grey lighten-5 hoverable" style="margin-top: 60px; padding-bottom: 10px; border-radius: 60px">
                        <div class="row valign-wrapper">
                            <div class="col s12">
                                <span class="black-text">
                                    <p style="text-align: center; font-size: 1.5em"><%= c.name %></p>
                                </span>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>