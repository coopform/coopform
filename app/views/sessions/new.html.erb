<%= render 'msg' %>
<div class="container">
    <div class="row">
        <div class="col s12 m12 l6 offset-l3 xl6 offset-xl3">
            <div class="card" style="height: auto; width: 100%; padding: 25px; margin-top: 50px">
                <%= form_tag sessions_path do |form| %>
                    <div class="input-field">
                        <%= label_tag(:email, "Email") %>
                        <%= text_field_tag :email %>
                    </div>
                    <div class="input-field">
                        <%= label_tag(:password, "Senha") %>
                        <%= password_field_tag :password %>
                        <p class="alert header" style="color: red"><%= alert %></p>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 l4 xl4">
                            <%= link_to("Cadastre-se", signup_path, class: "link btn amber", style: "width: 100%") %>
                        </div>
                        <div class="col s12 m12 l4 offset-l4 xl4 offset-xl4">
                            <%= submit_tag("Login", class: "link btn green accent-3", style: "width: 100%") %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
</div>